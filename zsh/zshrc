#!/usr/bin/env zsh

export EDITOR=vim
export MYDOTFILES=$HOME/dotfiles
export TERM=xterm

setopt AUTO_CD

function chpwd() {ls}
if [[ ! -n $TMUX ]]; then
	# tmux attach || tmux new-session
fi

if [[ -x "`which trash-put`" ]]; then
	alias rm="trash-put"
else
	echo "Recommended to install 'trash-cli'"
	to_trash() {
		for file in $@
		do
			mv $file ~/.trash
		done
	}
	alias rm="to_trash"
fi

alias tgvim="gvim --remote-tab"
alias tvim="gvim --remote-tab"

